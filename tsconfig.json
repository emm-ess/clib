{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "CLIB",
    "extends": [
        "@tsconfig/node-lts/tsconfig.json",
        "@tsconfig/strictest/tsconfig.json"
    ],
    "files": [
        "src/index.ts"
    ],
    "include": [
        "types/*.d.ts",
        "src/**/*.ts"
    ],
    "compilerOptions": {
        "outDir": "./dist",
        "allowSyntheticDefaultImports": true,
        "sourceMap": false,
        "declaration": false,
        "noEmitOnError": true,
        "noImplicitAny": true,
        "verbatimModuleSyntax": true
    }
}
