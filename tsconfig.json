{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "CLIB",
    "extends": "@tsconfig/node18-strictest-esm/tsconfig.json",
    "files": [
        "src/index.ts"
    ],
    "include": [
        "types/*.d.ts",
        "src/**/*.ts"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "sourceMap": false,
        "declaration": false,
        "noEmitOnError": true,
        "noImplicitAny": true,
        "verbatimModuleSyntax": true,
        "ignoreDeprecations": "5.0"
    }
}
